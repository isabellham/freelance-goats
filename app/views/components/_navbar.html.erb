<div>
  <nav class="container-navbar">
    <div class="container-logo">
      <a class="navbar-link" href="/">
        <%= image_tag "freelancegoats-logo.png", alt: "Freelance Goats logo", class:"navbar-logo" %>
      </a>
    </div>
    <div class="container-items">
      <ul>
        <li class="navbar-item">
          <%= link_to "Home", root_path, class: "navbar-link" %>
        </li>
        <li class="navbar-item">
          <%= link_to "Book a goat", goats_path, class: "navbar-link" %>
        </li>
        <li class="navbar-item">
          <%= link_to "Add your goat", new_goat_path, class: "navbar-link" %>
        </li>
        <li class="navbar-item">
          <% if current_user %>
            <%= link_to "Dashboard", dashboard_path, class: "navbar-link" %>
          <% end %>
        </li>
        <% if user_signed_in? %>
          <li class="navbar-item">
            <%= link_to "Logout", destroy_user_session_path, data: { "turbo-method": :delete }, class: "navbar-link" %>
          </li>
        <% else %>
          <li class="navbar-item">
            <%= link_to "Login / Sign Up", new_user_session_path, class: "navbar-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</div>
