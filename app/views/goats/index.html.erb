<div class="container-h1">
  <h1 id="h1-goat-index">We found some nice freelance goats for you</h1>
</div>

<div class="container-search">
  <%= form_tag goats_path, method: :get, class: "d-flex", id: "search-bar" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Search for you favourite goat type (party, cuddle, yoga, etc...)",
      id: "search-field"
    %>
    <%= submit_tag "Search", class: "btn-book-goat" %>
  <% end %>
</div>

<div class="container-cards">
  <% @goats.each do |goat| %>
    <%= link_to goat_path(goat) do %>
      <div class="card">
        <div class="container-img-goat">
          <% if goat.photo.attached? %>
            <%= cl_image_tag(goat.photo.key, :alt=>"Goat picture", :class=>"img-goat") %>
          <% else %>
            <%= image_tag('placeholder-goat.jpg', :alt=>"Goat picture", :class=>"img-goat") %>
          <% end %>
        </div>
        <div class="container-goats">
          <div class="goat-card-header">
            <h5><%= goat.goattype %></h5>
            <h2><%= goat.name %></h2>
          </div>
          <div class="card-details">
            <h4><%= goat.city %></h4>
            <h3>â‚¬ <%= goat.price %></h3>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
